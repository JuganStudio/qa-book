{
    "extends": ["airbnb"],

    "parser": "babel-eslint",

    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "globalReturn": false,
            "impliedStrict": true
        }
    },

    "env": {
        "node": true,
        "es6": true
    },

    "rules": {
        "indent": [2, 4, {
            "SwitchCase": 1
        }],
        "no-trailing-spaces": [2, { "skipBlankLines": true }],
        "no-console": 0,
        "spaced-comment": 0,
        "comma-dangle": 0,
        "new-cap": 0,
        "import/prefer-default-export": 0
    }
}
